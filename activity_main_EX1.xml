<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTaille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="630dp"
            android:text="votre taille (en cm)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtPoids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="580dp"
            android:text="votre poids (en kg)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="530dp"
            android:text="votre age "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/lblResultat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="300dp"
            android:text="votre IMG est :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/lblInterpretation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="250dp"
            android:text="Interpretation:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/txtTaille1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="630dp"
            android:hint="Taper votre taille"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/txtPoids1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="580dp"
            android:hint="Taper votre poids"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="120dp" />

        <EditText
            android:id="@+id/txtAge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="530dp"
            android:hint="Taper votre age "
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/btnCalculIMG"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Calculer IMG"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="309dp" />

        <TextView
            android:id="@+id/lblResultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultat"
            tools:layout_editor_absoluteX="239dp"
            tools:layout_editor_absoluteY="408dp" />

        <TextView
            android:id="@+id/lblInterpretation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interpretation"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="464dp" />

        <RadioButton
            android:id="@+id/rdbHomme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homme"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="244dp" />

        <RadioButton
            android:id="@+id/rdbFemme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femme"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="244dp" />

        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            tools:layout_editor_absoluteX="297dp"
            tools:layout_editor_absoluteY="408dp" />

    </Button>


